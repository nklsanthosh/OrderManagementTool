<Window x:Class="OrderManagementTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManagementTool"
        mc:Ignorable="d"
        Title="Login Window" Height="450" Width="800" WindowState="Maximized" ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.718,0.539">
        <Label Content="UserName :" HorizontalAlignment="Left" Margin="230,146,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="236,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.067,0.31" Width="75"/>
        <TextBox x:Name="txt_username" HorizontalAlignment="Left" Margin="322,146,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="26" TextChanged="txt_username_TextChanged" />
        <PasswordBox x:Name="txt_password" HorizontalAlignment="Left" Margin="322,191,0,0" VerticalAlignment="Top" Width="160" Height="26" />
        <Button x:Name="btn_Login" Content="Log In" HorizontalAlignment="Left" Margin="370,256,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click"/>

    </Grid>
</Window>
