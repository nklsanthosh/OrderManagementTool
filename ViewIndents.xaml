<Window x:Class="OrderManagementTool.ViewIndents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManagementTool"
        mc:Ignorable="d"
        Title="ViewIndents" WindowStartupLocation="CenterScreen" Height="625" Width="1118"
         ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="grid_all_indents" Margin="35,46,0,146" HorizontalAlignment="Left" Width="1045" SelectionChanged="grid_all_indents_SelectionChanged"/>
        <Button x:Name="btn_view_indent"  HorizontalAlignment="Left" Margin="872,495,0,0" VerticalAlignment="Top" Height="30" Width="130" Click="btn_view_indent_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/search-icon.png" Width="20" Height="20"/>
                <TextBlock Text=" View Indent" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
